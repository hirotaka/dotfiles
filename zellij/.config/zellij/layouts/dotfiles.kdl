layout {
  cwd "~/Workspaces/github.com/hirotaka/dotfiles/"
  default_tab_template {
    children
    pane size=1 borderless=true {
      plugin location="zellij:tab-bar"
    }
    pane size=1 borderless=true {
      plugin location="zellij:status-bar"
    }
  }
  tab focus=true name="nvim" {
    pane {
      borderless true
      command "nvim"
    }
  }
  tab name="fish" {
    pane
  }
}
